<div class="container mx-auto px-4 py-10">
  <p id="notice"><%= notice %></p>

  <div class="space-x-4 ...">
    <div class="inline-block">
      <strong>Email:</strong>
      <%= @user.email %>
    </div>
    <div class="inline-block">
      <strong>Password:</strong>
      <%= @user.password %>
    </div>
    <div class="inline-block">
      <strong>Username:</strong>
      <%= @user.username %>
    </div>
  </div>
  <br />
  <br />
  <%= link_to 'Edit', edit_user_path(@user), class: "bg-white-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
  <%= link_to 'Back', users_path, class: "bg-white-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
</div>